{% extends 'base.html.twig'%}
{% block title property.title %}

{% block body %}
<div class="jumbotron">
<div class="container">
<div class="row">
<div class="col-md-8">

</div>
<div class="col md-4">
  <h1> {{ property.title }}</h1>
    <h1> {{ property.rooms}} : pièces - {{ property.surface}} m²</h1>

  <div class="text-secondary" style="font-size:3em;font-style:bold;">{{ property.FormatedPrice() }} €
      <a href="#" class="btn btn-secondary" > Contacter l'agent </a>
  </div>
</div>
  </div>
 </div>
 <div class="container mt-4">
   <p> {{ property.description | nl2br}}</p>
 <div class="row">

 <div class="col-md-8">
       <h2>Carractéristiques</h2>

 <table class="table table-striped">

    <tr >
      <td >Titre</td>
      <td >{{property.title}}</td>
    </tr>
    <tr>
      <td>Surface</td>
      <td>{{property.surface}} m²</td>
    </tr>
    <tr  >
      <td>Chambres</td>
      <td>{{property.rooms}} :pièces</td> 
    </tr>
    <tr>
      <td >Ville</td>
      <td>{{property.city}}</td>
    </tr>
  </table>
</div>
<div class="col-md-4">
       <h2 >Spécificités</h2>

     </div>
</div>
</div>
</div>

{% endblock %}